//***********************************************************************************
#define ACCEL_DEVID                (0x00)
#define ACCEL_REG_POWER_CTL        (0x2D)
#define ACCEL_REG_DATA_FORMAT      (0x31)
ACCEL_REG_THRESH_TAP                (0x1D)

#define MEASUREMENT_MODE          (0x08)


typedef enum
{
    RANGE_16G          = 0x3,
    RANGE_8G           = 0x2,
    RANGE_4G           = 0x1,
    RANGE_2G           = 0x0
} accel_range_t;

