 /*------------------------------------------------------------------------------------------------------------------------------------*/
 /*
 @brief:Setup accelerometer
 @param: none
 @return: none
 */
 /*-----------------------------------------------------------------------------------------------------------------------------*/
void setup_accelerometer()
{
  if (!accelerometer_init()) {
      LOG_INFO("Accelerometer initialisation failed\n\r");
  }
  else
  {
      LOG_INFO("Accelerometer initilisation passed\n\r");
  }
}

